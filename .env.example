# QA Agent Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Copilot API (if using Copilot for test generation)
GITHUB_COPILOT_API_KEY=your_github_copilot_api_key_here

# Sourcegraph Integration
SOURCEGRAPH_API_TOKEN=your_sourcegraph_api_token_here
SOURCEGRAPH_API_ENDPOINT=https://sourcegraph.com/.api

# Model Configuration
MODEL_PROVIDER=openai  # Alternatives: anthropic, github-copilot
MODEL_NAME=gpt-4o     # For OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
                      # For Anthropic: claude-3-opus, claude-3-sonnet

# Test Framework
TEST_FRAMEWORK=pytest
TARGET_COVERAGE=80.0